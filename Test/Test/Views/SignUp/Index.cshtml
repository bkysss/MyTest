@model Test.Models.UserInfo
@{
    
}

<h1>注册</h1>

<h2>@ViewData["message"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userIdCard" class="control-label"></label>
                <input asp-for="userIdCard" class="form-control" />
                <span asp-validation-for="userIdCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userPhone" class="control-label"></label>
                <input asp-for="userPhone" class="form-control" />
                <span asp-validation-for="userPhone" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="SignUp" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
